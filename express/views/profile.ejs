<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>NodeJs App</title>
    <style media="screen">
      body{background: #4cc77e; padding: 40px; color: #fff;}
      h1{font-size: 42px; text-transform: uppercase; text-align: center; margin:100px 0 30px 0; font-family: cursive;letter-spacing: 2px;}
      p{font-size: 20px; text-align: center; text-transform: uppercase;}
      li{text-align: center; font-size: 18px; padding: 5px; }
      ul{ list-style: none; margin-top: -10px; -webkit-padding-start:0; text-transform: capitalize};
    </style>
  </head>
  <body>
    <% include partials/navbar.ejs %>
    <h1>Welcome to your profile <%= person %></h1>
    <p>Age : <%= data.age%></p>
    <p>Job : <%= data.job%></p>
    <p>Hobbies</p>
      <ul>
        <% data.hobbies.forEach(function(item){ %>
            <li><%= item %></li>
        <% }); %>
      </ul>
  </body>
</html>
